{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "src/main/*", "src/app/*", "node_modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false
}
